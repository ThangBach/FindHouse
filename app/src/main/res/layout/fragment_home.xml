<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_marginTop="55dp"
            android:background="@color/background_main">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Bạn có phòng cho thuê ?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_main_2"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/home_btn_dangtin"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/border_item_post"
                    android:text="Đăng tin ngay"
                    android:textColor="@color/background_main"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_Post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/background_main"
            android:layout_weight="0.43">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>